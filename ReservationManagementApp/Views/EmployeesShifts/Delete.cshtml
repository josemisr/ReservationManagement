@model ReservationManagementApp.Models.Dto.EmployeeShiftDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Employee Shift</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Work Day
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkDay)
        </dd>
        <dt class="col-sm-2">
            Init Hour
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InitHour)
        </dd>
        <dt class="col-sm-2">
            End Hour
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndHour)
        </dd>
        <dt class="col-sm-2">
            Employee @Html.DisplayNameFor(model => model.IdEmployeeNavigation.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdEmployeeNavigation.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-idEmployee="@Model.IdEmployee">Back to Shifts Management</a>
    </form>
</div>
