@model ReservationManagementApp.Models.Dto.ReservationDto

@{
    ViewData["Title"] = "Cancel";
}

<h1>Cancel</h1>

<h3>Are you sure you want to cancel this reservation?</h3>
<div>
    <h4>Cancel the Reservations</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            Employee @Html.DisplayNameFor(model => model.IdEmployeeNavigation.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdEmployeeNavigation.Name)
        </dd>
        <dt class="col-sm-2">
            Service @Html.DisplayNameFor(model => model.IdServiceNavigation.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdServiceNavigation.Name)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Cancel" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Reservations</a>
    </form>
</div>
