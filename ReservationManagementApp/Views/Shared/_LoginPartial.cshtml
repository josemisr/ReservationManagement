@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

<ul class="navbar-nav">
    @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("User")))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @HttpContextAccessor.HttpContext.Session.GetString("UserName")!</a>
        </li>
        <li class="nav-item">
            <form id="LogOff" asp-controller="Account" asp-action="LogOff">
                <div class="form-group">
                    <a class="nav-link text-dark" style="cursor:pointer" onclick="document.getElementById('LogOff').submit();">LogOff</a>
                </div>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>
